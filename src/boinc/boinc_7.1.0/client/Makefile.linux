clean:
	rm $(PROGS) $(OBJ)

LIBS = -L ../lib \
    -lboinc \
    -lpthread \
    -lssl \
    -L /usr/local/lib/ -lcurl

.cpp.o:
	$(CC) -c -o $*.o $<

boinc_client: $(OBJ)
	$(CC) $(OBJ) $(LIBS) -o boinc_client

dependencies: *.cpp
	$(CC) -M *.cpp > dependencies

include dependencies
